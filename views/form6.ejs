<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Apply for Indian Voter ID - Step 1</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        h1 {
            text-align: center;
        }
        form {
            width: 80%;
            margin: 0 auto;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        th {
            background-color: #f2f2f2;
            padding: 10px;
            text-align: left;
        }
        td {
            padding: 10px;
        }
        label {
            display: block;
        }
        input, select {
            width: 100%;
            padding: 8px;
            margin-top: 5px;
        }
        button {
            width: 100%;
            padding: 10px;
            background-color: #4CAF50;
            color: white;
            border: none;
            cursor: pointer;
        }
        button:hover {
            background-color: #45a049;
        }
        .error {
            color: red;
            font-size: 0.9em;
        }
        .declaration-container {
            width:auto;
            height:auto;
        }
        /* .declaration-container input[type="checkbox"] {
            float: right;
            margin: 5px 0px;
            width: 200px;
        } */
    </style>
    <script>
        function validateForm() {
            const dateOfBirth = document.getElementById('date_of_birth').value;
            const today = new Date();
            const dob = new Date(dateOfBirth);
            const age = today.getFullYear() - dob.getFullYear();
            const m = today.getMonth() - dob.getMonth();
            if (m < 0 || (m === 0 && today.getDate() < dob.getDate())) {
                age--;
            }

            if (age < 18) {
                alert('You must be at least 18 years or Above.');
                return false;
            }

            return true;
        }
    </script>
</head>
<body>
    <h1>Apply for Indian Voter ID</h1>
    <form action="/submitindianvoterid" method="POST" onsubmit="return validateForm()">
        <!-- Personal Information -->
        <table>
            <tr>
                <th colspan="2">Personal Information</th>
            </tr>
            <tr>
                <td><label for="first_name">First Name:</label></td>
                <td><input type="text" name="first_name" id="first_name" required autocomplete="given-name" pattern="[A-Za-z]+" title="First name should only contain letters."></td>
            </tr>
            <tr>
                <td><label for="middle_name">Middle Name:</label></td>
                <td><input type="text" name="middle_name" id="middle_name" autocomplete="additional-name" pattern="[A-Za-z]*" title="Middle name should only contain letters."></td>
            </tr>
            <tr>
                <td><label for="last_name">Last Name:</label></td>
                <td><input type="text" name="last_name" id="last_name" required autocomplete="family-name" pattern="[A-Za-z]+" title="Last name should only contain letters."></td>
            </tr>
            <tr>
                <td><label for="date_of_birth">Date of Birth:</label></td>
                <td><input type="date" name="date_of_birth" id="date_of_birth" required autocomplete="bday"></td>
            </tr>
            <tr>
                <td><label for="gender">Gender:</label></td>
                <td>
                    <select name="gender" id="gender" required autocomplete="sex">
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Other">Other</option>
                    </select>
                </td>
            </tr>
        </table>

        <!-- Parent/Guardian Information -->
        <table>
            <tr>
                <th colspan="2">Parent/Guardian Information</th>
            </tr>
            <tr>
                <td><label for="parent_guardian_name">Parent/Guardian's Name:</label></td>
                <td><input type="text" name="parent_guardian_name" id="parent_guardian_name" required autocomplete="honorific-suffix" pattern="[A-Za-z ]+" title="Parent/Guardian's name should only contain letters and spaces."></td>
            </tr>
        </table>

        <!-- Address Information -->
        <table>
            <tr>
                <th colspan="2">Address Information</th>
            </tr>
            <tr>
                <td><label for="address_house_number">House Number:</label></td>
                <td><input type="number" name="address_house_number" id="address_house_number" required autocomplete="address-line1"></td>
            </tr>
            <tr>
                <td><label for="address_street_area">Street/Area:</label></td>
                <td><input type="text" name="address_street_area" id="address_street_area" required autocomplete="address-line2"></td>
            </tr>
            <tr>
                <td><label for="address_city_town_village">City/Town/Village:</label></td>
                <td><input type="text" name="address_city_town_village" id="address_city_town_village" required autocomplete="address-level2" pattern="[A-Za-z ]+" title="City/Town/Village should only contain letters and spaces."></td>
            </tr>
            <tr>
                <td><label for="address_district">District:</label></td>
                <td><input type="text" name="address_district" id="address_district" required autocomplete="address-level2" pattern="[A-Za-z ]+" title="District should only contain letters and spaces."></td>
            </tr>
            <tr>
                <td><label for="address_state">State:</label></td>
                <td><input type="text" name="address_state" id="address_state" required autocomplete="address-level1" pattern="[A-Za-z ]+" title="State should only contain letters and spaces."></td>
            </tr>
            <tr>
                <td><label for="address_pincode">Pin Code:</label></td>
                <td><input type="text" name="address_pincode" id="address_pincode" required autocomplete="postal-code" pattern="\d{6}" title="Pin code should be 6 digits."></td>
            </tr>
        </table>

        <!-- Contact Information -->
        <table>
            <tr>
                <th colspan="2">Contact Information</th>
            </tr>
            <tr>
                <td><label for="mobile_number">Mobile Number:</label></td>
                <td><input type="tel" name="mobile_number" id="mobile_number" required autocomplete="tel" pattern="\d{10}" title="Mobile number should be 10 digits."></td>
            </tr>
            <tr>
                <td><label for="email_address">Email Address:</label></td>
                <td><input type="email" name="email_address" id="email_address" required autocomplete="email"></td>
            </tr>
        </table>

        <!-- Identity Information -->
        <table>
            <tr>
                <th colspan="1">Identity Information</th>
            </tr>
            <tr>
                <td><label for="aadhaar_number">Aadhaar Number:</label></td>
                <td><input type="text" name="aadhaar_number" id="aadhaar_number" autocomplete="off" pattern="\d{12}" title="Aadhaar number should be 12 digits."></td>
            </tr>
        </table>
        <table>
                <tr>
                    <th>Declaration</th>
                </tr>
        </table>
        <div class="declaration-container" style="overflow: hidden;">
           
            <label for="declaration" style="margin-left: 10px; border-left:3px; padding-left:3px;"> <input style="width: 20px; height: 100%;" type="checkbox" name="declaration" id="declaration" value="1" required>I here by declare that the above information is true to the best of my knowledge.</label>
        </div>

        <button type="submit">Submit</button>
    </form>
</body>
</html>
